# Smart Hostel System Environment Configuration
# Copy this file to .env and update with your production values

# Server Configuration
NODE_ENV=development
PORT=8080

# Database Configuration - Updated to use existing db.sqlite file
DB_PATH=server/db.sqlite

# JWT Configuration
JWT_SECRET=your-very-strong-jwt-secret-key-change-in-production-make-it-at-least-64-characters-long

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080,http://localhost:8081,http://localhost:8082,http://127.0.0.1:3001,https://your-domain.com

# Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif

# Email Configuration (for notifications and verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false
MAIL_FROM=Smart Hostel System <noreply@your-domain.com>

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=300
RATE_LIMIT_AUTH_MAX=20
RATE_LIMIT_UPLOAD_MAX=50

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# Security Configuration
SESSION_SECRET=your-session-secret-key-minimum-32-characters
BCRYPT_ROUNDS=12

# Cache Configuration
CACHE_DURATION=300000
CACHE_MAX_SIZE=1000

# External API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Feature Flags
ENABLE_PAYMENTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_REVIEWS=true
ENABLE_FAVORITES=true

# Development/Testing Configuration
TEST_DB_PATH=server/test.db
TEST_PORT=3001
SKIP_EMAIL_VERIFICATION=false

# Production Optimizations
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
TRUST_PROXY=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=30d
BACKUP_LOCATION=/var/backups/smart-hostel

# SSL/HTTPS Configuration (for production)
HTTPS_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Load Balancer Configuration
CLUSTER_WORKERS=auto
MAX_CLUSTER_WORKERS=4

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Performance Configuration
MEMORY_LIMIT=512mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
